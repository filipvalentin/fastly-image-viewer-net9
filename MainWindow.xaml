<Window x:Class="fastly_image_viewer_net9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fastly_image_viewer_net9"
		mc:Ignorable="d"
		MinHeight="310"
		MinWidth="400"
		WindowStyle="SingleBorderWindow"
        SourceInitialized="Window_SourceInitialized"
        AllowDrop="True"
        Closing="Window_Closing"
		KeyDown="Window_KeyDown"
		MouseMove="Window_MouseMove">
	<Window.Resources>
		<!-- ToolTip Style -->
		<Style TargetType="ToolTip">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ToolTip">
						<Grid
							Background="#2F2F2F">
							<Border 
                                Background="#2F2F2F"
                                BorderBrush="#191919"
                                BorderThickness="1">
								<Label
                                    Foreground="#99FFFFFF"
                                    Content="{TemplateBinding Content}"/>
							</Border>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Storyboard x:Key="FadeOutStoryboard">
			<DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.2"/>
		</Storyboard>
		<Storyboard x:Key="FadeInStoryboard">
			<DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.2"/>
		</Storyboard>
	</Window.Resources>
	<Grid x:Name="mainGrid">

		<Canvas x:Name="ImageCanvas" Background="#303030">
			<Image x:Name="DisplayImageControl"
               MouseLeftButtonDown="Image_MouseLeftButtonDown"
               MouseLeftButtonUp="Image_MouseLeftButtonUp"
               MouseMove="Image_MouseMove"
               MouseWheel="Image_MouseWheel"
               MouseEnter="Image_MouseEnter"
               MouseLeave="Image_MouseLeave"
               Stretch="None"
               RenderTransformOrigin="0,0">
				<Image.RenderTransform>
					<MatrixTransform x:Name="ImageTransform"/>
				</Image.RenderTransform>
			</Image>
		</Canvas>




		<Button
            x:Name="OpenButton"
            Style="{StaticResource NativeButtonWithShadowStyle}"
            Width="60" Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="30"
            FontFamily="Segoe UI Light"
            FontSize="16"
            Content="OPEN"
            Cursor="Hand"
            Click="OpenButton_Click"/>
		<Button
            x:Name="SaveAsButton"
            Style="{StaticResource NativeButtonWithShadowStyle}"
            Width="70" Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="95, 30"
            FontFamily="Segoe UI Light"
            FontSize="16"
            Content="SAVE AS"
            IsEnabled="False"
            Cursor="Hand"
            Click="SaveAsButton_Click"/>
		<Grid
            HorizontalAlignment="Right"
            Margin="30">
			<Button 
                x:Name="CloseButton"
                Style="{StaticResource NativeButtonWithShadowStyle}"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                ToolTip="Close"
                ToolTipService.InitialShowDelay="1000"
                ToolTipService.ShowDuration="2500"
                ToolTipService.BetweenShowDelay="0"
                Cursor="Hand"
                Click="CloseButton_Click">
				<Path
                    Fill="{Binding ElementName=CloseButton, Path=Foreground}"
                    Width="16" Height="16"
                    Data="{StaticResource IconClose}"
                    Stretch="Fill"/>
			</Button>

			<StackPanel VerticalAlignment="Center">
				<Button
                    x:Name="ZoomInButton"
                    Style="{StaticResource NativeButtonWithShadowStyle}"
                    Width="40" Height="40"
                    ToolTip="Zoom in"
                    ToolTipService.InitialShowDelay="1000"
                    ToolTipService.ShowDuration="2500"
                    ToolTipService.BetweenShowDelay="0"
                    IsEnabled="False"
                    Cursor="Hand"
                    Click="ZoomInButton_Click">
					<Path
                        Fill="{Binding Foreground, ElementName=ZoomInButton}"
                        Width="20" Height="20"
                        Data="{StaticResource IconZoomPlus}"
                        Stretch="Fill"/>
				</Button>
				<Separator Height="10"  Width="0" />
				<Button
                    x:Name="ZoomOutButton"
                    Style="{StaticResource NativeButtonWithShadowStyle}"
                    Width="40" Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ToolTip="Zoom out"
                    ToolTipService.InitialShowDelay="1000"
                    ToolTipService.ShowDuration="2500"
                    ToolTipService.BetweenShowDelay="0"
                    IsEnabled="False"
                    Cursor="Hand"
                    Click="ZoomOutButton_Click">
					<Path
                        Fill="{Binding Foreground, ElementName=ZoomOutButton}"
                        Width="20" Height="20"
                        Data="{StaticResource IconZoomMinus}"
                        Stretch="Fill"/>
				</Button>
			</StackPanel>
			<Button
                x:Name="InfoButton"
                Style="{StaticResource NativeButtonWithShadowStyle}"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" 
                ToolTip="Information"
                ToolTipService.InitialShowDelay="1000"
                ToolTipService.ShowDuration="2500"
                ToolTipService.BetweenShowDelay="0"
                Cursor="Hand">
				<Path
                    Fill="{Binding ElementName=InfoButton, Path=Foreground}"
                    Width="22" Height="22"
                    Data="{StaticResource IconInfo}"
                    Stretch="Fill"/>
			</Button>
		</Grid>
	</Grid>
</Window>
